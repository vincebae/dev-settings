# AWS / Kubernetes 
alias k=kubectl

kconfig() {
    name=$1
    if [ -z $name ]; then
        name=bixby3-ide
    fi
    echo "Context: $name"
    aws eks update-kubeconfig --region us-west-2 --name $name
}

klistpod() {
    name=$1
    if [ -z $name ]; then
        name=eng1
    fi
    echo "Namespace: $name"
    k -n $name get pod
}

kgreppod() {
    kgetpod $1 | grep $2 | mycut 1
}

kbashpod() {
    k exec -it -n $1 $2 -c app -- /bin/bash
}

klogpod() {
    k logs -n $1 -f $2 -c app
}
